<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FacePhys"
             x:Class="FacePhys.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />

            </ResourceDictionary.MergedDictionaries>
        
            <Style x:Key="MyTabShell" TargetType="Shell">
                <Setter Property="TabBarForegroundColor" Value="#7DC589" />
                <Setter Property="TabBarBackgroundColor" Value="#FFFFFF" /> 
                <Setter Property="TabBarTitleColor" Value="#7DC589" />  <!-- 选中标签的颜色，这里使用绿色 -->
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>

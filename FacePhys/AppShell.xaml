<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FacePhys.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FacePhys"
    xmlns:pages="clr-namespace:FacePhys.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="FacePhys">

    
    <TabBar>
        <ShellContent Title="主页"
                      Route="HomePage"
                      ContentTemplate="{DataTemplate pages:HomePage}" />
        <ShellContent Title="测量"
                      Route="MeasurePage"
                      ContentTemplate="{DataTemplate pages:MeasurePage}" />
        <ShellContent Title="报告"
                      Route="ReportPage"
                      ContentTemplate="{DataTemplate pages:ReportPage}" />
        <ShellContent Title="设置"
                      Route="SettingsPage"
                      ContentTemplate="{DataTemplate pages:SettingsPage}" />
        <ShellContent Route="EditPage"
                  ContentTemplate="{DataTemplate pages:EditPage}" />
    </TabBar>

    <ShellContent Route="LoginPage"
                  ContentTemplate="{DataTemplate pages:LoginPage}" />
    

</Shell>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FacePhys.ViewModels"
             x:Class="FacePhys.Pages.LoginPage"
             x:DataType="vm:UserViewModel"
             Background="#F5F5F5">
    <ContentPage.Resources>
        <!-- 定义按钮样式 -->
        <Style x:Key="GreenButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#7CC587" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="CornerRadius" Value="10" />
            <!-- 这里可以添加其他样式设置，如字体大小、内边距等 -->
        </Style>
        
    </ContentPage.Resources>

    <StackLayout Padding="40" Spacing="40">
        <!-- <Label Text="Login" FontSize="Large" HorizontalOptions="Center" /> -->
        <Entry Placeholder="Username" Text="{Binding User.Username}" /> 
        <Entry Placeholder="Password" Text="{Binding User.Password}" IsPassword="True" />
        <Button Text="Login" Command="{Binding LoginCommand}" Style="{StaticResource GreenButtonStyle}" Margin="0,100,0,0"/>
        <Button Text="Register" Clicked="OnRegisterClicked" Style="{StaticResource GreenButtonStyle}"/>
    </StackLayout>
</ContentPage>
